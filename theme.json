{
  "theme": {
    "light": {
      "background": "#f9fafb",
      "surface": "#ffffff",
      "primary": "#2563eb",
      "primary-hover": "#1e40af",
      "secondary": "#64748b",
      "accent": "#f59e0b",
      "text": "#111827",
      "text-muted": "#6b7280",
      "border": "#e5e7eb",
      "success": "#22c55e",
      "error": "#ef4444",
      "warning": "#f97316",
      "info": "#3b82f6"
    },
    "dark": {
      "background": "#0f172a",
      "surface": "#1e293b",
      "primary": "#3b82f6",
      "primary-hover": "#60a5fa",
      "secondary": "#94a3b8",
      "accent": "#fbbf24",
      "text": "#f1f5f9",
      "text-muted": "#94a3b8",
      "border": "#334155",
      "success": "#4ade80",
      "error": "#f87171",
      "warning": "#fb923c",
      "info": "#60a5fa"
    },
    "font": {
      "base": "'Inter', system-ui, sans-serif",
      "heading": "'Poppins', system-ui, sans-serif",
      "mono": "'Fira Code', monospace"
    },
    "radius": {
      "sm": "6px",
      "md": "12px",
      "lg": "20px"
    },
    "shadow": {
      "sm": "0 1px 2px rgba(0,0,0,0.05)",
      "md": "0 2px 6px rgba(0,0,0,0.1)",
      "lg": "0 4px 12px rgba(0,0,0,0.15)"
    },
    "transition": {
      "fast": "150ms",
      "medium": "300ms",
      "slow": "500ms"
    }
  }
}
